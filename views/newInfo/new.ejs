<link rel="stylesheet" href="http://news-at.zhihu.com/css/news_qa.auto.css"></link>

<style>

    .comment{
        padding: 20px;
    }

    .user-info{
        width: 90px;
    }

    .box{
        position: relative;
        float: left;
        text-align: center;
    }

    .box img{
        margin: 0;
        height: 70px;
        width: 70px;
    }

    .text-box{
        width: 90px;
        word-break: break-word;
    }

    .text-box .box-p{
        margin-top: 5px;
        margin-bottom: 5px;
    }

    .span-likes{
        color: red;
    }
</style>

<div>
    <div class="body">
        <%- html %>
    </div>
    <div class="comment">
        <table class="table table-striped">
            <tbody>
                <% for (var i = 0; i < comments.length; i++) {%>
                    <tr>
                        <td class="user-info">
                            <div class="box">
                                <% var url = 'http://zhihu.garychang.cn/tiny-pic?img=' + comments[i].avatar %>
                                <img src=<%= url%>>
                                <div class="text-box">
                                    <div class="box-p"><span><%= comments[i].author%></span></div>
                                    <div class="box-p">
                                        <span><%= comments[i].time%></span>
                                    </div>
                                    <div class="box-p">
                                        <span class="span-likes"><%= comments[i].likes%></span>
                                        <span>èµž</span>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td><%= comments[i].content%></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
    </div>
</div>